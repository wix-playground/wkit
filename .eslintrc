{
  "extends": ["eslint:recommended", "prettier"],
  "parser": "babel-eslint",
  "plugins": [
    "prettier"
  ],
  "env": {
    "browser": true,
    "commonjs": true,
    "node": true,
    "es6": true
  },
  "parserOptions": {
    "ecmaVersion": 6
  },
  "rules": {
    "no-console": "off",
    "prettier/prettier": [
      "error",
      {
        "bracketSpacing": true,
        "printWidth": 100,
        "singleQuote": true,
        "trailingComma": "all"
      }
    ]
  }
}